    <script>
        function recupererCagnotte() {
            if(confirm("Voulez-vous vider la cagnotte ?")) {
                // Ici, on envoie l'ordre au serveur de mettre à jour les "Vues de référence"
                document.getElementById('montant-cagnotte').innerText = "0.00";
